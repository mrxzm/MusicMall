<script>
    $(function () {

        var audioEle = document.getElementById("audio");

        function playMusic() {
            
            audioEle.load();
            if (audioEle.paused) { /*如果已经暂停*/
                audioEle.play();   //播放
            } else {
                audioEle.pause();  //暂停
            }
        }

        $(".auto_play").on("click", function () {
            var url = $(this).data("url");
            $("#audio").attr("src","@CommonHelpers.ImageUrl("")" + url);
            playMusic();
        });
        $("#btn_music1").on("click", function (event) {
            if (event.target == event.currentTarget) {
                $(this).toggleClass("fa-microphone-slash");
                $(this).toggleClass("fa-music");
                playMusic();
                return false;
            }
            
        });
        
    });
</script>

